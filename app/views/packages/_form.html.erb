<%= form_for package do |form| %>

<% if package.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(package.errors.count, "error") %> prohibited this package from being saved:</h2>

  <ul>
    <% package.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="row">
  <div class="col-md-6">
    <div class="kt-portlet kt-portlet--height-fluid">
      <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
          <h3 class="kt-portlet__head-title">
            Informações
          </h3>
        </div>
      </div>
      <div class="kt-portlet__body">
        <div class="kt-section">
          <div class="kt-section__body">
            <div class="form-group">
              <%= form.label 'Altura' %>
              <%= form.text_field :heigth, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label 'Largura' %>
              <%= form.text_field :width, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label 'Profundidade' %>
              <%= form.text_field :depth, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label 'Peso' %>
              <%= form.text_field :weight, class: "form-control" %>
            </div>

              <%= form.hidden_field :shipment_id %>
          </div>


        </div>
      </div>

      <div class="kt-portlet__foot">
        <div class="kt-form__actions">
          <div class="row">
            <div class="col-lg-6">
              <%= form.submit "Salvar", class:"btn btn-primary" %>
              <%= link_to 'Voltar', :back, class:"btn btn-secondary"  %>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

<% end %>
